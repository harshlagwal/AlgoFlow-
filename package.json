{
  "name": "algoflow",
  "displayName": "AlgoFlow",
  "description": "Visual Algorithms Made Simple",
  "version": "1.0.1",
  "publisher": "harshlagwal",
  "license": "MIT",
  "homepage": "https://github.com/harshlagwal/AlgoFlow-",
  "repository": {
    "type": "git",
    "url": "https://github.com/harshlagwal/AlgoFlow-"
  },
  "bugs": {
    "url": "https://github.com/harshlagwal/AlgoFlow-/issues"
  },
  "icon": "media/logo.png",
  "keywords": [
    "algorithm",
    "algorithms",
    "flowchart",
    "visualization",
    "data structures",
    "time complexity",
    "space complexity",
    "students",
    "education",
    "learning"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "files": [
    "out",
    "media",
    "webview",
    "README.md",
    "LICENSE"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "algoflow.visualize",
        "title": "AlgoFlow: Visualize Code Selection",
        "category": "AlgoFlow"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "algoflow.visualize",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "algoflow-explorer",
          "title": "AlgoFlow",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "algoflow-explorer": [
        {
          "type": "webview",
          "id": "algoflow.sidebar",
          "name": "AlgoFlow Control Center",
          "icon": "$(settings-gear)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  }
}